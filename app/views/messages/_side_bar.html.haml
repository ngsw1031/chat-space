.side-bar
  .side-bar__user
    .side-bar__user--box
      %p.side-bar__user--box__name
        = current_user.name
      %ul.side-bar__user--box__icons
        %li.side-bar__user--box__icons__new-group
          = link_to new_group_path(current_user) do
            = icon('fas','edit')
        %li.side-bar__user--box__icons__edit-user
          = link_to edit_user_path(current_user.id) do
            = icon('fas', 'cog', class: 'icon')

  .side-bar__group-list
    - current_user.groups.each do |group|
      .side-bar__group-list__block
        = link_to group_messages_path(group) do
          .side-bar__group-list__block--name
            = group.name
          .side-bar__group-list__block--info
            = group.show_last_message
